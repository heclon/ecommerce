{
  "name": "ecommerce",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:common && yarn build:ui && yarn build:app && yarn build:admin && yarn build:worker",
    "build-storybook:all": "lerna run build-storybook --stream --scope '{@ecommerce/admin,@ecommerce/app,@ecommerce/ui}'",
    "build-storybook:app": "lerna run build-storybook --stream --scope @ecommerce/app",
    "build:admin": "lerna run generate --stream --scope @ecommerce/common && lerna run build --stream --scope @ecommerce/admin",
    "build:app": "lerna run generate --stream --scope @ecommerce/common && lerna run build --stream --scope @ecommerce/app",
    "build:common": "lerna run build --stream --scope @ecommerce/common",
    "build:worker": "lerna run build --stream --scope @ecommerce/worker",
    "build:ui": "lerna run generate --stream --scope @ecommerce/common && lerna run build --stream --scope @ecommerce/ui",
    "chromatic:all": "yarn workspaces foreach -v run chromatic:exec",
    "dev": "lerna run dev --stream --scope @ecommerce/app --no-bail",
    "dev:admin": "lerna run dev --stream --scope @ecommerce/admin --no-bail",
    "dev:setup:env": "(cd packages/app; cp -i .env.local.example .env;) && (cd packages/admin; cp -i .env.local.example .env;) && (cd packages/datamodel; cp -i .env.example .env;) && (cd packages/worker; cp -i .env.local.example .env;) && (cd packages/common; cp -i .env.example .env;) && (cp -i .env.example .env)",
    "dev:setup:postgres": "docker-compose --env-file .env -p=ecommerce up -d",
    "dev:setup:prisma": "cd packages/datamodel && yarn prisma migrate dev && yarn prisma migrate deploy && yarn seed",
    "dev:ui": "lerna run dev --stream --scope @ecommerce/ui --no-bail",
    "dev:worker": "lerna run dev --stream --scope @ecommerce/worker --no-bail",
    "generate": "lerna run generate --stream --scope @ecommerce/datamodel && lerna run generate --stream --scope @ecommerce/common && lerna run generate --stream --scope '{@ecommerce/admin,@ecommerce/app}'",
    "postinstall": "lerna run generate --stream --scope @ecommerce/datamodel",
    "lint": "yarn lint:fix",
    "lint:check": "eslint --quiet --ext .tsx,.ts .",
    "lint:fix": "yarn lint:check --fix",
    "migrate": "lerna run migrate:deploy --stream --scope @ecommerce/datamodel",
    "migrate:dev": "lerna run migrate:dev --stream --scope @ecommerce/datamodel",
    "prepare": "husky install",
    "prisma:reset": "lerna run prisma:reset --stream --scope @ecommerce/datamodel",
    "seed": "lerna run seed --stream --scope @ecommerce/datamodel",
    "start:admin": "lerna run start --stream --scope @ecommerce/admin",
    "start:app": "lerna run start --stream --scope @ecommerce/app",
    "start:worker": "lerna run start --stream --scope @ecommerce/worker",
    "start:ci": "INSECURE_AUTH=true yarn run start:app",
    "start:coverage:admin": "npx nyc --reporter=lcov --reporter=json lerna run start --stream --scope @ecommerce/admin",
    "start:coverage:app": "npx nyc --reporter=lcov --reporter=json lerna run start --stream --scope @ecommerce/app",
    "test": "lerna run test --stream",
    "open:codecoverage": "open ./packages/coverage/lcov-report/index.html"
  },
  "resolutions": {
    "@prisma/client": "2.30.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.6.0",
    "@urql/core": "3.1.1",
    "autoprefixer": "^10.3.1",
    "classnames": "^2.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "graphql-upload": "13.0.0",
    "jest": "28.1.3",
    "webpack": "5.50.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@playwright/test": "^1.29.2",
    "@pm2/io": "^5.0.0",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.5.16",
    "@storybook/addon-viewport": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/jest": "0.0.10",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/testing-react": "^1.3.0",
    "@storybook/theming": "^6.5.16",
    "@tshirt-ventures/eslint-config": "3.2.2",
    "@types/async-retry": "^1.4.5",
    "@types/faker": "^5.5.8",
    "@types/jest": "^29.4.0",
    "@types/pg-escape": "^0.2.1",
    "async-retry": "1.3.3",
    "babel-jest": "^29.4.1",
    "babel-plugin-istanbul": "^6.1.1",
    "browserify-fs": "^1.0.0",
    "chromatic": "6.15.0",
    "eslint": "^8.17.0",
    "faker": "^5.5.3",
    "husky": "^7.0.0",
    "jsdom-testing-mocks": "1.7.0",
    "lerna": "^4.0.0",
    "next-transpile-modules": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "pg-escape": "^0.2.0",
    "playwright": "^1.29.2",
    "playwright-chromium": "^1.29.2",
    "playwright-test-coverage": "^1.2.9",
    "pluralize": "8.0.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.5.0",
    "react-select-event": "^5.5.1",
    "react-spinners": "^0.13.7",
    "start-server-and-test": "^2.0.0",
    "storybook-addon-manual-mocks": "^0.0.6",
    "storybook-addon-next": "^1.6.9",
    "storybook-addon-react-docgen": "^1.2.42",
    "storybook-mock-date-decorator": "^1.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.8",
    "type-fest": "^2.19.0",
    "typescript": "4.5.5",
    "waait": "1.0.5",
    "webpack": "5.50.0"
  },
  "engines": {
    "node": ">=16.10.0 <16.15.0",
    "yarn": ">3.0.0"
  },
  "packageManager": "yarn@2.4.3",
  "dependencies": {
    "pm2": "^5.2.2"
  }
}
